<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>


    </data>
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include
        android:id="@+id/tab_home"
        layout="@layout/main_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tab_info"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/tab_info"
        layout="@layout/main_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tab_home"
        app:layout_constraintRight_toLeftOf="@+id/tab_my"
        app:layout_constraintTop_toTopOf="parent"
         />
    <include
        android:id="@+id/tab_my"
        layout="@layout/main_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tab_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>